{
  "extends": ["next/core-web-vitals", "prettier"],

  "rules": {
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "groups": ["builtin", "external", "type", "internal", "parent", "sibling", "index"]
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "patterns": [".*"]
      }
    ]
  }
}
